<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>Phantasma.TOMB</Title>
    <Description>Provides runtime compilation of TOMB smart contracts and tokens.</Description>
    <PackageIcon>logo.png</PackageIcon>
    <Version>1.5.3</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>Phantasma.TOMB</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\phantasma-ng\logo.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Phantasma.Business" Version="1.0.7" />
  </ItemGroup>

</Project>
